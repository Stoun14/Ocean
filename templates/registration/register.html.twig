						<!-- Email input -->
						<div class="form-outline mb-4">
							{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'form1Email'}}) }}
							<label class="form-label" for="form1Email">Email</label>
						</div>

						<!-- Phone input -->
						<div class="form-outline mb-4">
							{{ form_widget(registrationForm.phone_number, {'attr': {'class': 'form-control', 'id': 'form1Phone'}}) }}
							<label class="form-label" for="form1Phone">Téléphone</label>
						</div>

						<!-- Address input -->
						<div class="form-outline mb-4">
							{{ form_widget(registrationForm.address, {'attr': {'class': 'form-control', 'id': 'form1Address'}}) }}
							<label class="form-label" for="form1Address">Addresse</label>
						</div>

						<div
							class="row mb-4">
							<!-- Zip input -->
							<div class="col">
								{{ form_widget(registrationForm.zip, {'attr': {'class': 'form-outline', 'id': 'form1Zip'}}) }}
