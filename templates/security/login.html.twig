{% extends 'base.html.twig' %}

{% block title %}
	Connexion!
{% endblock %}

{% block main %}
	<!-- Background image -->
	<div id="intro" class="bg-image shadow-2-strong">
		<div class="d-flex align-items-center">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-8 col-xl-5 my-5 {# align-items-center #}">
						<form method="post" id="page-form" class=" mask-custom rounded-5 shadow-5-strong p-5">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									Vous êtes connecté en tant que
									{{ app.user.username }}
									<a href="{{ path('logout') }}">Deconnexion</a>
								</div>
							{% endif %}
							<!-- Email input -->
							<div class="form-outline mb-4">
								<input type="email" name="email" id="inputEmail" class="form-control" required autofocus/>
								<label class="form-label" for="inputEmail">Email:</label>
							</div>

							<!-- Password input -->
							<div class="form-outline mb-4">
								<input type="password" name="password" id="inputPassword" class="form-control" required/>
								<label class="form-label" for="inputPassword">Mot de passe:</label>
							</div>

							<input
							type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<!-- 2 column grid layout for inline styling -->
							<div class="row mb-4">
								<div
									class="col d-flex justify-content-center">
									<!-- Checkbox -->
									<div class="form-check">
										<input class="form-check-input" type="checkbox" name="_remember_me" id="remember" checked/>
										<label class="form-check-label" for="remember">
											Souvenez-vous de moi
										</label>
									</div>
								</div>

								<div
									class="col text-center">
									<!-- Simple link -->
									<a href="{{path('app_forgot_password_request')}}">Mot de passe oublié?</a>
								</div>
							</div>

							<!-- Submit button -->
							<button type="submit" class="btn btn-primary btn-block">Connexion</button>
							<div class="text-center">
								<a href="{{ path("register") }}" class="text-center">Créer un compte</a>
							</div>
						</form>
						
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Background image -->
{% endblock %}