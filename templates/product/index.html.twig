{% extends 'base.html.twig' %}

{% block title %}
	Boutique
{% endblock %}

{% block main %}
	<!-- Section-->
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
				{% for product in products %}
					<div class="col mb-5">
						<div class="card h-100">
							<!-- Product image-->
							<a href="{{ path('product_show', {'id': product.id}) }}"><img class="card-img-top" src="{{asset('images/products/' ~ product.image)}}" alt="{{ product.name }}"/></a>
							<!-- Product details-->
							<div class="card-body p-4">
								<div class="text-center">
									<!-- Product name-->
									<h5 class="fw-bolder">{{ product.name }}</h5>
									<!-- Product price-->
									{{ (product.price / 100) |number_format(2, ',', ' ') }} â‚¬
								</div>
							</div>
							<!-- Product actions-->
							<div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
								<div class="text-center">
									<a class="btn btn-success mt-auto" href="{{ path('cart_add', {'id': product.id}) }}">Ajouter au panier</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
